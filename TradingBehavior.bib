}
@article{Schlarbaum1978,
abstract = {Virtually all existing empirical studies of the American capital market deal with the investment performance record of institutions. The present paper offers data on the investment experiences of a large and representative sample of individual investors, based on a 7-year history of actual trading behavior. Those experiences suggest some reasonable skill in security selection, particularly in connection with short-term trading cycles. Transactions costs, however, have a substantial impact on realized net returns, rendering the overall performance results observed similar to those available from passive investment strategies over corresponding calendar periods.},
author = {Schlarbaum, Gary G. and Lewellen, Wilbur G. and Lease, Ronald C.},
