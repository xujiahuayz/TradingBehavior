file = {::},
issn = {13563467},
journal = {New Political Economy},
month = {jun},
number = {2},
pages = {163--188},
title = {{On the causes of increasing world poverty and inequality, or why the Matthew effect prevails}},
url = {http://www.tandfonline.com/doi/abs/10.1080/1356346042000218050},
volume = {9},
year = {2004}
}
